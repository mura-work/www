<% if user_signed_in? %>
    <% if book.favorited_by?(current_user) %>
        <p><span>聞きたい: </span><%=link_to book.favorites.count, book_favorites_path(book.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>聞きたい: </span><%=link_to book.favorites.count, book_favorites_path(book.id), method: :book, remote: true %></p>
    <% end %>
<% else %>
    <p><span>聞きたい数: </span><%= book.favorites.count %></p>
<% end %>